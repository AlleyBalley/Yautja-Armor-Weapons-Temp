	<ThingDef ParentName="ABBaseMeleeWeapon_Sharp_Quality">
		<defName>ABYautja_Melee_CeremonialDagger</defName>
		<label>Ceremonial Dagger</label>
		<description>A dagger carried by all yautja. This ceremonial tool is used to claim trophies from the fallen. It is especially related to the blooding of young yautja.</description>
		<graphicData>
			<texPath>Things/Equipment/Melee/Yautja_CeremonialDagger</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.0</drawSize>		
		</graphicData>
		<tickerType>Normal</tickerType>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<statBases>
			<MarketValue>120</MarketValue>
			<WorkToMake>2000</WorkToMake>
			<Mass>0.7</Mass>
		</statBases>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<weaponTags>
			<li>YautjaMelee</li>
		</weaponTags>
		<weaponClasses>
			<li>Ranged</li>
		</weaponClasses>
		<recipeMaker>
			<researchPrerequisite>ABYautja_Tech_T1</researchPrerequisite>
			<skillRequirements>
				<Crafting>2</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>ABYautja_TableMachining</li>
				<li>CraftingSpot</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<disallowedThingDefs>
					<li>Silver</li>
					<li>Gold</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>1.7</cooldownTime>
			</li>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>13</power>
				<cooldownTime>1.2</cooldownTime>
			</li>
			<li>
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.7</cooldownTime>
			</li>
		</tools>
